<h1>Posts</h1>
{{#if user}}
<p>Welcome <span style="font-weight: bold">{{user.username}}</span></p>
{{/if}}

{{#if posts}}
{{#each posts}}
<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <span class="card-title" style="font-weight: bold">{{title}}</span>
                <p style="padding-bottom: 1.5rem">{{truncate (stripTags body) 500}}</p>
                <span class="right">{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
            </div>
            <div class="card-action">
                <a href="/posts/show/{{_id}}">Show</a>
                <a href="/posts/{{user._id}}">{{user.username}}</a>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<p class="center">Be the first to create a post!</p>
{{/if}}