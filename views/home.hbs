<h1>Home Page</h1>
{{#if user}}
<p>Welcome <span style="font-weight: bold">{{user.username}}</span></p>
{{/if}}

{{#if posts}}
{{#each posts}}
<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <span class="card-title" style="font-weight: bold">{{title}}</span>
                <p>{{stripTags body}}</p>
            </div>
            <div class="card-action">
                <a href="/posts/show">Show</a>
                <a href="#">{{user.username}}</a>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<p class="center">Be the first to create a post!</p>
{{/if}}