<h1>{{post.title}}</h1>
<a href="/posts/{{post.user._id}}" class="waves-effect btn-flat right">{{post.user.username}}</a>
<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <p style="padding-bottom: 1.5rem">{{stripTags post.body}}</p>
                <div class="right">
                    <span>{{formatDate post.createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
                </div>
            </div>
        </div>
    </div>
</div>